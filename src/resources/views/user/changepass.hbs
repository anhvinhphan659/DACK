<div class="card card-outline-secondary">
    <div class="card-header">
        <h3 class="mb-0">Đổi mật khẩu</h3>
    </div>
    <div class="card-body">
        <form class="form" method="post" action="/users/{{user.USER}}/changepass" role="form" autocomplete="off">
            <div class="form-group">
                <label for="inputPasswordOld">Mật khẩu hiện tại</label>
                <input type="password" class="form-control" id="inputPasswordOld" name="pass" required="">
            </div>
            <div class="form-group">
                <label for="inputPasswordNew">Mật khẩu mới</label>
                <input type="password" class="form-control" name="newpass" id="inputPasswordNew" required="">
            </div>
            <div class="form-group">
                <label for="inputPasswordNewVerify">Xác nhận lại mật khẩu</label>
                <input type="password" class="form-control" name="renewpass" id="inputPasswordNewVerify" required="">
                <span class="form-text small text-muted">
                    Xác nhận xem nhập mật khẩu đúng không !
                </span>
            </div>
            <div class="mt-4" id="message">
               
                 <div class="mt-1 mb-1 text-center text-danger"> {{message}}</div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success btn-lg float-right" id="btn" disabled>Lưu</button>
            </div>
        </form>
    </div>
</div>
<script>
    var renew = $('#inputPasswordNewVerify')
    var newpa = $('#inputPasswordNew')
    var massage = '{{message}}'
    
    $('#inputPasswordNewVerify').on('change', function(e) {
        $('#message').empty()
        if(renew.val() == newpa.val()){
            $('#btn').removeAttr('disabled');
               
        }else{
            $('#message').append(` <div class="mt-1 mb-1 text-center text-danger">password wrong !!! please check again </div>`)
            $('#btn').attr({'disabled':'disabled'})
        }
    })
    $('#inputPasswordNew').on('change', function(e) {
        $('#message').empty()
        if(renew.val() == newpa.val()){
            $('#btn').removeAttr('disabled');
            }else{
             $('#btn').attr({'disabled':'disabled'})
             }
        })


</script>