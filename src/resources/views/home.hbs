<body>

  <div class="container">

    <h1>{{title}}</h1>
    <p>Web bán truyện được ưa thích nhất</p>

    <div class="card-outline">
      <div class="card-body">
        <h4>Truyện tranh mới</h4>
      </div>
      <div class="row">
        <div class="categories__slider owl-carousel">
          {{#each newComics}}
            <div class="col-lg-3">
              <div class="categories__item set-bg">
                <div class="card" style=" height:100%">
                  <a href="/books/{{this.masach}}">
                    <div class="card-top">
                      <img
                        src="{{this.HINHANH}}"
                        class="card-img-top"
                        alt="{{this.tensach}}"
                      />
                    </div>
                  </a>
                  <div class="card-body top-body">
                    <a href="/books/{{this.masach}}">
                      <div class="card-title">
                        {{this.tensach}}
                      </div>
                    </a>
                    <p class="card-text">{{this.MOTA}}</p>
                  </div>

                 
                </div>
              </div>
            </div>
          {{/each}}

        </div>
      </div>
    </div>

