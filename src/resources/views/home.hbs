                        {{this.tensach}}
                      </div>
                    </a>
                    <p class="card-text">{{this.MOTA}}</p>
                  </div>
                  
                </div>
              </div>
            </div>
          {{/each}}

        </div>
      </div>
    </div>

    <div class="card-outline">
      <div class="card-body">
        <h4>Top truyện tranh hot</h4>
      </div>
      <div class="row">
