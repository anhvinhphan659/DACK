                    <p class="card-text">{{this.MOTA}}</p>
                  </div>

                  
                </div>
              </div>
            </div>
          {{/each}}

        </div>
      </div>
    </div>

    <div class="card-outline">
      <div class="card-body">
        <h4>Top truyện chữ hot</h4>
      </div>
      <div class="row">
        <div class="categories__slider owl-carousel">
          {{#each hotNovels}}
