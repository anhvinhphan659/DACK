<script>

function updateTotal()
{
    var allSubPrices=$("[data-th=Subtotal]");
    var total=0;
    var totalStrong=$('strong')[0];
    for (let i=0;i<allSubPrices.length;i++)
    {
        total+=parseInt(allSubPrices[i].innerText);
    }

    totalStrong.innerHTML="Tổng tiền "+String(total)+" đ";
}

updateTotal();
</script>
